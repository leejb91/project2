    <div class="col-md-8">
        <%= f.label :blk %>
        <br>
        <%= f.text_field :blk, class: "col-md-4" %>
    </div>
    </div>

    <%= f.submit "Submit changes" %>
    <br>
    <%= link_to "Delete", performance_path, method: :delete, data: { confirm: "Are you sure you want to delete this performance?"} %>

<% end %>
