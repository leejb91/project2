<h1>Edit <%= link_to @performance.player.name, performance_path %></h1>

<%= form_for @performance, :html => {:class => "form-horizontal center"} do |f| %>

<h3><%= @performance.player.name %> #<%= @performance.player.player_number %></h3>
<h3><%= @performance.player.team.name %></h3>
<h4>Game on: <%= @performance.game.date.strftime("%m/%d/%Y") %></h4>

    <div class="form-group">
