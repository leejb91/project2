    <div class="col-md-8">
        <%= f.label :fga %>
        <br>
        <%= f.text_field :fga, class: "col-md-4" %>
    </div>
    </div>

  <div class="form-group">
    <div class="col-md-8">
        <%= f.label :tpm %>
        <br>
        <%= f.text_field :tpm, class: "col-md-4" %>
    </div>
    </div>


  <div class="form-group">
    <div class="col-md-8">
        <%= f.label :tpa %>
        <br>
        <%= f.text_field :tpa, class: "col-md-4" %>
    </div>
    </div>

  <div class="form-group">
    <div class="col-md-8">
        <%= f.label :ftm %>
        <br>
        <%= f.text_field :ftm, class: "col-md-4" %>
    </div>
    </div>

  <div class="form-group">
