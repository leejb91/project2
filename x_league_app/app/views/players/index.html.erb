<% @teams = @teams.sort_by {|h| h[:name]} %>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<div class="player_page">
<% @teams.each do |team| %>
  <div>
    <a data-toggle="collapse" href="#collapse<%= team.id %>" ><h4><%= team.name %></h4></a>
    <div id="collapse<%= team.id %>" class="panel-collapse collapse">
      <% team.players.each do |player| %>
        <div>
        <%= link_to player.name + " #" + player.player_number, player %>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to "Favorite", pick_favorite_path(player) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
</div>
