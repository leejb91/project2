<!DOCTYPE html>
<html>
<head>
  <title>X League Nation</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
</head>
<body>

  <% if current_user %>

<nav class="navbar navbar-default navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" id="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("http://www.xleaguenation.org/images/logo.6e6510a4.png"), root_path, {:class => "logo"} %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right navpad">
      <% if current_user.favorite %>
        <li><%= link_to 'Home', favorite_path(current_user.favorite) %></li>
      <% else %>
        <li><%= link_to 'Home', root_path %></li>
      <% end %>
        <li><%= link_to 'Teams', teams_path %></li>
        <li><%= link_to 'Players', players_path %></li>
        <li><%= link_to 'Logout', session_path('dummy'), method: :delete %></li>
      </ul>
    </div>
  </div>
</nav>

  <% else %>

<nav class="navbar navbar-default navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" id="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("http://www.xleaguenation.org/images/logo.6e6510a4.png"), root_path, {:class => "logo"} %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Teams', teams_path %></li>
        <li><%= link_to 'Players', players_path %></li>
        <li><%= link_to 'Login', login_path %></li>
        <li><%= link_to 'Sign Up', new_user_path %></li>
      </ul>
    </div>
  </div>
</nav>


  <header class="navbar navbar-fixed-top navbar-inverse collapse navbar-collapse" id="navbar-collapse-1">
    <ul class="nav navbar-nav pull-left">
      <li><div><%= link_to image_tag("http://www.xleaguenation.org/images/logo.6e6510a4.png"), root_path, {:class => "logo"} %></div></li>
    </ul>
    <ul class="nav navbar-nav pull-right links">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Teams', teams_path %></li>
      <li><%= link_to 'Players', players_path %></li>
      <li><%= link_to 'Login', login_path %></li>
      <li><%= link_to 'Sign Up', new_user_path %></li>
    </ul>
  </header>
      <% end %>
<div class="container">
<%= yield %>
</div>
</body>
</html>
