<div class="container">
<h1>Sign Up</h1>
<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <%= f.submit %>

<% end %>
